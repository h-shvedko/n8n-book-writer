# ============================================
# WPI AI Content Factory - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# n8n Configuration
# ============================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
TIMEZONE=Europe/Berlin

# n8n Basic Auth (optional)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=

# n8n API Key (generate in n8n Settings > API)
N8N_API_KEY=

# ============================================
# Qdrant Vector Database
# ============================================
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION=wpi_content

# ============================================
# OpenAI API (Required for embeddings)
# ============================================
OPENAI_API_KEY=

# Embedding configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ============================================
# MCP Servers
# ============================================
# Authentication token for MCP HTTP APIs
MCP_AUTH_TOKEN=

# Port configuration
MCP_STANDARDS_PORT=3002
MCP_RESEARCH_PORT=3003
MCP_CODER_PORT=3004
N8N_MCP_PORT=3000

# ============================================
# Admin Dashboard
# ============================================
ADMIN_FE_PORT=3001
ADMIN_API_PORT=3005
POSTGRES_PORT=5432

# PostgreSQL credentials (defaults work, change for production)
POSTGRES_USER=wpi_user
POSTGRES_PASSWORD=wpi_pass

# pgAdmin configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# ============================================
# Logging
# ============================================
LOG_LEVEL=info